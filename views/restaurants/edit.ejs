<% layout('layouts/boilerplate') %>
<h1 class='text-center'>Edit Review</h1>
<div class="col-6 offset-3">
    <form action="/restaurants" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input value="<%= restaurant.title %>" class="form-control" type="text" id="title" name="restaurant[title]" required >
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="restaurant[location]"  required value="<%= restaurant.location %>">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="input-group mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input value="<%= restaurant.price %>" name="restaurant[price]"  required type="text" class="form-control" aria-label="Restaurant Price" id="price" placeholder="0.00">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="formFile" class="form-label">Upload Image</label>
            <input class="form-control" name="image" type="file" id="formFile">
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="mb-3">
            <% restaurant.images.forEach(function(img,i) { %> 
                <img src="<%= img.url %> " class="img-thumbnail" alt="">
            <% }) %> 
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="restaurant[description]" required ><%= restaurant.description %>"</textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <button class="btn btn-info mb-3">Update Review</button>
    </form>
    <a href="/restaurants/<%= restaurant.id %> ">Back to Reviews</a>
</div>